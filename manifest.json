{
  "manifest_version": 2,
  "name": "Amazon Review Downloader",
  "description": "Open Product review page and click on AmzReviewDownloader button from chrome toolbar.",
  "version": "0.3",
  "author": "Deepak Rai",
  "homepage_url": "http://deepakrai.in",
  "content_scripts": [{
    "matches": ["https://www.amazon.com/*"],
    "js": ["jquery.min.js", "script.js", "xlsx.full.min.js", "FileSaver.min.js"],
    "run_at": "document_end"
  }],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "https://www.amazon.com/*"
  ]
}